@model  QlikPlatformManager.ViewModels.ArchiverStructureViewModel
@{

}

<script type="text/javascript">
    $.validator.unobtrusive.parse(document);
</script>
<div class="container-fluid" id="ContentDiv">

    @*ZONE ARIANE*@
    <div class="row">
        <div class="col-sm-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Archivage</li>
                    <li class="breadcrumb-item active" aria-current="page">Stucture</li>
                </ol>
            </nav>
            <br />
        </div>
    </div>

    @*ZONE POST FORMULAIRE*@
    <div class="row">
        <div class="col-sm-12">
            @*@using (Html.BeginForm())*@
            @using (Ajax.BeginForm("Structure", "Archiver", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "ContentDiv", OnBegin = "onBegin", OnComplete = "onComplete", OnFailure = "Erreur" }))
            {
                @*ZONE SAISIE*@
                <div class="row">
                    <div class="col-md-12">
                        <fieldset class="form-group">
                            <legend>Sélection de l'application de référence</legend>
                            <br />
                            @Html.Partial("ConnexionServeur", Model.ServeurRef)
                            <br />

                            <div class="form-group row">
                                <div class="col-md-2">
                                    <button id="ActionStateBtn" type="submit" class="btn btn-success">
                                        @*disabled*@
                                        <span id="ActionStateSpr" class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display:none"></span> @*hidden*@
                                        Archiver
                                    </button>
                                </div>
                                <div class="col-md-4">

                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                @*ZONE RESULTATS*@
                <div class="row">
                    <div id="ResultsDiv" class="col-sm-12">
                        @if (!String.IsNullOrEmpty(Model.Results.Title))
                        {
                            @Html.Partial("Results", Model.Results)
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
