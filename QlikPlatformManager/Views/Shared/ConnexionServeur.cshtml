@model  QlikPlatformManager.ViewModels.ServeurViewModel

@*Entête scripts*@
<script src="@Url.Content("~/Scripts/mine/utils.js")" type="text/javascript"></script>
<script>
    //Variables à utilisées en javascript
    var _infosApplication = @Html.Raw(Json.Encode(Model.ApplicationsInfos));
</script>

@*HTML Contenu*@
<div class="form-group row">
    @Html.LabelFor(model => model.Serveur, new { @class = "col-md-2 col-form-label" })
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.Serveur, new SelectList(Model._Serveur, "Value", "Text"), new { @class = "form-control form-control-sm", @onchange = "OnChangeSelect(this);", @id = @Html.NameFor(m => m.Serveur).ToString().Replace(".","_") + "_Select" }) 
            </div>
            <div class="col-md-1">
                <span class="fas fa-check" style="color:#28a745;display:none" id="@(Html.NameFor(m => m.Serveur).ToString().Replace(".","_"))_Span" data-toggle="tooltip" data-placement="left" data-html="true" title="@Model.ServeurInfos"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.ValidationMessageFor(model => model.Serveur, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
