@model  QlikPlatformManager.ViewModels.ServeurViewModel

@*Entête scripts*@
<script src="@Url.Content("~/Scripts/mine/utils.js")" type="text/javascript"></script>
<script>
    //Variables à utilisées en javascript
    var _infosApplication = @Html.Raw(Json.Encode(Model.ApplicationsSourceInfos));
</script>

@*HTML Contenu*@
<div class="form-group row">
    @Html.LabelFor(model => model.ServeurSource, new { @class = "col-md-1 col-form-label" })
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.ServeurSource, new SelectList(Model._ServeurSource, "Value", "Text"), new { @class = "form-control form-control-sm", @onchange = "OnChangeSelect(this);", @id = "serveurSource" })
            </div>
            <div class="col-md-1">
                <span class="fas fa-check" style="color:#28a745;display:none" id="ConnexionFromServerSpan" data-toggle="tooltip" data-placement="left" data-html="true" title="@Model.ServeurSourceInfos"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.ValidationMessageFor(model => model.ServeurSource, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(model => model.FluxSource, new { @class = "col-md-1 col-form-label" })
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.FluxSource, new SelectList(Model._FluxSource, "Value", "Text"), "", new { @class = "form-control form-control-sm", @onchange = "OnChangeSelect(this);", @id = "fluxSource" })
            </div>
            <div class="col-md-1">
                <span class="fas fa-check" style="color:#28a745;display:none" id="ConnexionFromFluxSpan" data-toggle="tooltip" data-placement="left" data-html="true" title="@Model.FluxSourceInfos"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.ValidationMessageFor(model => model.FluxSource, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(model => model.ApplicationSource, new { @class = "col-md-1 col-form-label" })
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.ApplicationSource, new SelectList(Model._ApplicationSource, "Value", "Text"), "", new { @class = "form-control form-control-sm", @onchange = "OnChangeSelect(this);", @id = "applicationSource" })
            </div>
            <div class="col-md-1">
                <span class="fas fa-check" style="color:#28a745;display:none" id="ConnexionFromApplicationSpan" data-toggle="tooltip" data-placement="left" data-html="true" title=""></span>
